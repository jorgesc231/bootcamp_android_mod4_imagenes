<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="64dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivImagen1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Logo de C"
            android:scaleType="fitCenter"
            android:src="@drawable/c_logo"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/ivImagen2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Logo de Go"
            android:scaleType="fitCenter"
            android:src="@drawable/go_logo"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/ivImagen3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Logo de Android Manco"
            android:scaleType="fitCenter"
            android:src="@drawable/android_logo"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/ivImagen4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Logo de Flutter"
            android:scaleType="fitCenter"
            android:src="@drawable/flutter_logo"
            android:layout_margin="12dp"/>

    </GridLayout>

    <Button
        android:id="@+id/btSalir"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Salir"/>

</androidx.constraintlayout.widget.ConstraintLayout>